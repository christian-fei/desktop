{
  "name": "pomodoro-cc-mac-app",
  "version": "2.0.0",
  "description": "Mac menubar app for pomodoro.cc",
  "dependencies": {
    "menubar": "^6.0.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "electron": "^5.0.1",
    "electron-packager": "^13.1.1",
    "spectron": "^3.8.0",
    "standard": "*"
  },
  "main": "main.js",
  "scripts": {
    "test": "ava test/unit && standard",
    "test:all": "ava",
    "test:watch": "npm t -- --watch",
    "build:mac": "electron-packager . Pomodoro --platform=darwin --arch=x64 --icon=Icon.icns --overwrite",
    "build:linux": "electron-packager . Pomodoro.linux --platform=linux --arch=x64 --icon=Icon.icns --overwrite",
    "build:win32": "electron-packager . Pomodoro.win32 --platform=win32 --arch=x64 --icon=Icon.icns --overwrite",
    "optimize": "ditto -c -k --sequesterRsrc --keepParent ./Pomodoro-darwin-x64/Pomodoro.app ./Pomodoro-darwin-x64/Pomodoro.zip",
    "start": "electron ."
  }
}
